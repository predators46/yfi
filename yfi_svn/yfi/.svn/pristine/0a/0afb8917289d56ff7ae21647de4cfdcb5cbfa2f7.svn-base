/*----Form label---------*/
.frmRequired  {

    width: 130px;
    height: 30px;
    float: left;
    font-weight: bold;
    color:#393a39;
    text-align: right;
    margin-right: 6px;
}

.frmOptional  {

    width: 130px;
    height: 30px;
    float: left;
    color:#828288;
    font-weight: normal;
    text-align: right;
    margin-right: 6px;
}
