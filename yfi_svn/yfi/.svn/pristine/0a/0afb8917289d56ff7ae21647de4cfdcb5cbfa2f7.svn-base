.divWrapper {

    height: 100%; 
    width: 100%;
    overflow: hidden;   /* erase window level scrollbars */
}

.divRightCategory {

    height:300px;
    width: 500px; 
    background-color: #beedd5;
    border: 1px solid #000000;
    padding: 10px;
    margin: 10px;
    margin-bottom: 20px;
}

.divProfile {

    height: 90px;
    padding: 2px;
    padding-left: 20px;
    padding-right: 20px;
    /*background-color: green;*/
}

.divSelects {

    width: 400px;
    padding-top: 5px;
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    border-bottom: 1px solid #000000;
    background-color: #6bf96f;
    float: right;

}

.divForm {
    width:400px; 
    background-color: #beedd5;
    border: 1px solid #000000;
    padding: 2px;
}

