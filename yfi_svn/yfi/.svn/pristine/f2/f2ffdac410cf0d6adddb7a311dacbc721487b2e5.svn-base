<div>
    <!-- Add the div for the two actions: Add and Edit -->
    <div style="height: 40px; padding: 2px;padding-left: 20px;padding-right: 20px;" >
        <div class="divActions">
            <a href="#" class='FancyIcon' data-dojo-attach-point="editNode"><div class='edit'></div></a> 
            <a href="#" class='FancyIcon' data-dojo-attach-point="deleteNode"><div class='delete'></div></a>  
        </div>
    </div>
    <h3 data-dojo-attach-point="headingNode">${title}</h3>
    <p style="text-align:center;"><img class="${baseClass}Picture" src="" data-dojo-attach-point="pictureNode" /></p>
    <p data-dojo-attach-point="descriptionNode">${!description}</p>
</div>
